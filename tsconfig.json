{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "rootDir": "./src",
      "baseUrl": ".",
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "incremental": true,
      "strict": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true
   },
   "include": ["src/**/*"]
}
